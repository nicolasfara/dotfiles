version: 2
locations:
  home:
    from: {{ .restic.path }}
    to: remote
    forget: prune
    hooks:
      failure:
        - notify-send -a "Backup" -t 5000 'Backup fail' 
        - 'printf "*Backup report*\n\`status\`: *COMPLETE*\n\`hostname\`: $(hostname)\n\`timestamp\`: $(date +%d/%m/%Y\ %H:%M:%S)" | telegram-send --format "markdown" --stdin'
      success:
        - notify-send -a "Backup" -t 5000 'Backup complete successfully' 
        - 'printf "*Backup report*\n\`status\`: *COMPLETE*\n\`hostname\`: $(hostname)\n\`timestamp\`: $(date +%d/%m/%Y\ %H:%M:%S)" | telegram-send --format "markdown" --stdin'
    options:
      forget:
        keep-daily: 7 # keep 7 last daily snapshots
        keep-weekly: 3 # keep 3 last weekly snapshots
        keep-monthly: 2 # keep 2 last monthly snapshots
        keep-yearly: 1 # keep 1 last yearly snapshots
      backup:
        exclude:
          - '**/.gradle'
          - '**/.m2'
          - '**/.ivy2'
          - '**/.android'
          - '**/.eclipse'
          - '**/.sbt'
          - '**/.g8'
          - '**/.visualvm'
          - '**/Android'
          - '**/.stm*'
          - '**/.npm'
          - '**/.arduino15'
          - '**/.cargo'
          - '**/**/.platformio'
          - '**/**/.icons'
          - '**/**/*Cache*'
          - '**/**/.cache*'
          - '**/**/__pycache__'
          - '**/projects/*/venv'
          - '**/projects/*/env'
          - '**/.davfs2/cache'
          - '**/.local'
          - '**/.thunderbird/*/ImapMail'
          - '**/Downloads'
          - '**/mnt'
          - '**/restore'
          - '**/.mozilla/firefox/*/storage'
          - '**/.mozilla/firefox/*/minidumps'
          - '**/.config/chromium/Default/Local Storage'
          - '**/.config/chromium/Default/Session Storage'
          - '**/.config/chromium/Default/Application Cache'
          - '**/.config/*/Cache'
          - '**/.config/*/User'
          - '**/.config/*/GPUCache'
          - '**/.config/*/ShaderCache'
          - '**/.config/Code/CachedData'
          - '**/.config/Code/CachedExtensions'
          - '**/.config/Code/logs'
          - '**/.wine'
          - '*.log'
          - '*.jar'
          - '**/lost+found'

backends:
  remote:
    type: b2
    path: '{{ .restic.repository }}'
    key: {{ .restic.password }}
    env:
      B2_ACCOUNT_ID: {{ .restic.b2accountid }}
      B2_ACCOUNT_KEY: {{ .restic.b2accountkey }}
